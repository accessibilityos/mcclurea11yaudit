<script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit" async defer></script>
<script>
  var actCallback = function (response) {
    $('#contactFormSubmit').prop("disabled", false);
    $('#re-captcha').remove();
  };
  var expCallback = function() {
    $('#contactFormSubmit').prop("disabled", true);
  };
 
  var onloadCallback = function () {
    var widget = grecaptcha.render(document.getElementById("re-captcha"), {
      'sitekey' : "6LdG4qkUAAAAAK-AdE0ZwVXw_J-fsmW-vtuBZvXt",
      'theme': "light",
      'callback' : actCallback,
      'expired-callback': expCallback,
    });
  }
</script>

<script>
  $(document).ready(function () {
    function getQueryVariable(variable) {
           var query = window.location.search.substring(1);
           var vars = query.split("&");
           for (var i=0;i<vars.length;i++) {
                   var pair = vars[i].split("=");
                   if(pair[0] == variable){return pair[1];}
           }
           return(false);
    }
    if(getQueryVariable("id") == 1) {
      document.getElementById("category").selectedIndex = 4;
      toggleFields();
    } else if(getQueryVariable("id") == 2) {
      document.getElementById("category").selectedIndex = 2;
      toggleFields();
    }
    
    toggleFields();
    $(".select-contact-dropdown").change(function () {
        toggleFields();
    });

  });
  function toggleFields() {
    if ($(".select-contact-dropdown").val() == "Recipe submissions") {
      	$("#contactMain").hide();
        $("#recipeForm").show();
    }
    else {
     	$("#contactMain").show();
        $("#recipeForm").hide(); 
    }
}
</script>
   

