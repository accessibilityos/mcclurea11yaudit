{% unless settings.homepage_page == blank or pages[settings.homepage_page].empty? %}
{% assign page = pages[settings.homepage_page] %}
<div class="rte grid-margins">
  {{ page.content }}
</div>
{% endunless %}

<style>
@media only screen and (min-width: 64.063em) {
  #masthead.home video { 
    position: absolute;
    top:0px;
    left:-5%;
    min-width: 105%;
    min-height: 100%;
    width: 100%;
    height: auto;
    z-index: -100;
    background: url('{{ 'home-hero_bg.jpg' | asset_url }}') no-repeat;
    background-size: cover;
    transition: 1s opacity;
  }
}
 
@media only screen and (max-width: 64.063em) {
  #masthead.home video {display:none;}
  #masthead.home .vac {
      background: url('{{ 'home-hero_bg.jpg' | asset_url }}') center no-repeat;
        background-size:cover;
  }
  #cta-container #goods {border-bottom: 0.3125rem solid #f5efe9;}
}
  

</style>
<script>
  $(document).ready(function (){
    var vid = document.getElementById("bgvid");

    function playVid() {
      vid.play();
    }

    function pauseVid() {
      vid.pause();
    }

    $('.play-pause-btn').on('click', function(){
      
      if($(this).hasClass('play')){
        pauseVid();
        $(this).text('play');
      }
      if($(this).hasClass('pause')){
        playVid();
        $(this).text('pause');
      }
      $(this).toggleClass('play pause');
    });
    
    
    //playVid();
  });
</script>
