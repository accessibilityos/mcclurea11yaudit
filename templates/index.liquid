<!-- Masthead -->
  <div id="masthead" class="home">  
    <div class="vac ">
       <div class="va">
         
         <video  poster="{{ 'home-hero_bg.jpg' | asset_url }}" id="bgvid" controls loop muted autoplay>
            <source src="{{ 'MCP_Final-nosound.webm' | asset_url }}" type="video/webm">
            <source src="{{ 'MCP_Final.ogv' | asset_url }}" type="video/ogg">
         	<source src="{{ 'MCP_Final-nosound.m4v' | asset_url }}" type="video/mp4">
         </video>
         <div class="video-controls" style="display:none;">
           <button type="button" class="play-pause-btn play">Play</button>
         </div>
         <img src="{{ 'home-hero_logo.png' | asset_url }}" alt="DETROIT, MCCLURE'S PICKLES">
       </div>
    </div>
  </div>
  
  <!-- CTA -->
  <div id="cta-container">
     <div id="goods">
        <div class="vac">
        	<div class="va">
              <a href="/pages/the-goods" aria-label="Browse The Goods"><img src="{{ 'home-goods_sign.png' | asset_url }}" alt="The Goods"></a>
        	</div>
        </div>  
     </div>
    
     <div id="story">
      <div class="vac">
        	<div class="va">
              <a href="/pages/culture" aria-label="This Is Our Story"><img src="{{ 'home-story_sign.png' | asset_url }}" alt="Culture"></a>
        	</div>
        </div>
     </div>
    <div id="onejar">
      <div class="vac">
        	<div class="va">
              <a href="/products/chips" target="_blank" aria-label="Pickle Flavoured Potato Chips"><img src="{{ 'potato-chips-new.png' | asset_url }}" alt="Lil Pickle Packs"></a>
        	</div>
        </div>
     </div>
  </div>
